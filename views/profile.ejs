<form class="myform" action="/users/update-profile/<%=user.id%>" method="post">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card my-4">
                    <img src="/images/ll.avif" class="img-fluid" alt="/images/ll.avif">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=user.name%>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <%=user.email%>
                        </h6>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <%=user.contact%>
                        </h6>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card my-4">
                    <div class="card-body">
                        <h2 class="card-title">Profile</h2>
                        <div class="form-group my-2">
                            <label for="name">Name:</label>
                            <input class="form-control" type="text" id="name" name="name" value="<%=user.name%>"
                                placeholder="Enter your name" required>
                        </div>
                        <div class="form-group my-2">
                            <label for="username">Username:</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1">@</span>
                                <input class="form-control" type="text" id="username" name="username"
                                    value="<%=user.username%>" placeholder="Enter your username" required>
                            </div>
                        </div>
                        <div class="form-group my-2">
                            <label for="email">Email:</label>
                            <div class="input-group mb-3">
                                <input class="form-control" type="email" id="email" name="email" value="<%=user.email%>"
                                    placeholder="Enter your email" required aria-label="Username"
                                    aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <div class="form-group my-2">
                            <label for="role">Role:</label>
                            <input class="form-control" type="text" id="role" name="role" value="<%=user.role%>"
                                placeholder="Enter your role" required>
                        </div>
                        <div class="form-group my-2">
                            <label for="address">Address:</label>
                            <textarea class="form-control" id="address" name="address" value="<%=user.address%>"
                                rows="4" placeholder="Enter your text here..." required></textarea>
                        </div>
                        <div class="form-group my-2">
                            <label for="weight">Weight:</label>
                            <input class="form-control" type="text" id="weight" name="weight" value="<%=user.weight%>"
                                placeholder="Enter your weight" required>
                        </div>
                        <div class="form-group my-2">
                            <label for="dob">Date of Birth:</label>
                            <input id="datepicker" class="form-control" type="text" id="dob" name="dob"
                                value="<%=user.birth_date%>" placeholder="Enter your Date of Birth" required>
                        </div>
                        <div class="form-group my-2">
                            <label for="history">History:</label>
                            <input class="form-control" type="text" id="history" name="history"
                                value="<%=user.history%>" placeholder="Enter your history" required>
                        </div>
                        <div class="form-group my-2">
                            <label for="contact">Contact No.:</label>
                            <input class="form-control" type="text" id="contact" name="contact"
                                value="<%=user.contact%>" placeholder="Enter your contact number" required>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button class="btn btn-success my-4" type="submit">Submit</button>
                </div>
            </div>
        </div>
    </div>
</form>