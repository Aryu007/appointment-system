<div class="d-flex">
    <div class="card mx-4 my-4 w-25 h-100">
        <img src="/images/ll.avif" class="card-img-top" alt="/images/ll.avif">
        <div class="card-body mx-2">
            <h5 class="card-title h3">
                <%=user.name%>
            </h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">
                <%=user.email%>
            </h6>
            <h6 class="card-subtitle mb-2 text-body-secondary">
                <%=user.contact%>
            </h6>
            <p class="card-text"></p>
            <!-- <a href="#" class="card-link">Card link</a> -->
            <!-- <a href="#" class="card-link">Another link</a> -->
        </div>
    </div>
    <div class="card mx-4 my-4 w-100 h-100">
        <div class="card-body mx-2 my-2">
            <h2 class="card-title">Profile</h2>

            <div class="card-body d-flex justify-content-between">
                <h5>Name : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.name%>"
                    placeholder="Enter last name" required>
            </div>
            <div class="card-body d-flex justify-content-between">
                <h5>Username : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.username%>"
                    placeholder="Enter username" required>
            </div>
            <div class="card-body d-flex justify-content-between">
                <h5>Email : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.email%>"
                    placeholder="Enter your email" required>
            </div>
            <div class="card-body d-flex justify-content-between">
                <h5>Role : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.role%>"
                    placeholder="Enter your role" required>
            </div>
            <div class="card-body d-flex justify-content-between">
                <h5>Address : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.address%>"
                    placeholder="Enter your address" required>
            </div>
            <div class="card-body d-flex justify-content-between">
                <h5>Weight : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.weight%>"
                    placeholder="Enter your weight" required>
            </div>
            <div class="card-body d-flex justify-content-between">
                <h5>DOB : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.birth_date%>"
                    placeholder="Enter Date Of Birth" required>
            </div>
            <div class="card-body d-flex justify-content-between">
                <h5>History : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.history%>"
                    placeholder="Enter history" required>
            </div>
            <div class="card-body d-flex justify-content-between">
                <h5>Contact No. : </h5>
                <input class="w-75 rounded border p-2" type="text" name="lname" value="<%=user.contact%>"
                    placeholder="Enter history" required>
            </div>
        </div>
    </div>
</div>